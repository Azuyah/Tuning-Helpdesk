<!doctype html>
<html lang="sv">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width,initial-scale=1" />
  <title>TinyMCE 5 – Editor</title>

  <!-- TinyMCE 5 (ingen API key krävs) -->
  <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>
</head>
<body style="margin:0">
  <textarea id="editor"></textarea>

  <script>
    tinymce.init({
      selector: '#editor',
      height: 480,
      branding: false,
      menubar: false,
      plugins: 'link image media table lists code paste',
      toolbar:
        'undo redo | styleselect | bold italic underline | ' +
        'alignleft aligncenter alignright | bullist numlist | ' +
        'link image media table | code',
      // Bilder: tillåt inklistrade (data-URL) i denna test
      paste_data_images: true,
      automatic_uploads: false,
      images_upload_handler: function (_blobInfo, _success, failure) {
        failure('Uppladdning avstängd i denna vy. Klistra in bilden eller använd bild-URL.');
      },
      // YouTube: Insert → Media, klistra in URL (eller klistra in direkt i editorn)
      media_live_embeds: true,
      convert_urls: false,
      content_style: 'body{font-family:system-ui,-apple-system,Segoe UI,Roboto,Inter,sans-serif;font-size:16px;line-height:1.6}'
    });
  </script>
</body>
</html>