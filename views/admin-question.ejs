<!-- views/admin-question.ejs -->
<section id="qView" data-qid="<%= q.id %>" class="mx-auto max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-8">

  
  <!-- Vänsterkolumn -->
  <div class="lg:col-span-2 space-y-8">

      <!-- Header-rad: Tillbaka (vänster) + Ta bort (höger) -->
  <div class="flex items-center justify-between">
    <button type="button"
            class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-300 hover:bg-slate-50"
            onclick="if (history.length>1) history.back(); else location.href='/admin'">
      <i class="ti ti-arrow-left"></i> Tillbaka
    </button>

    <form method="POST"
          action="/admin/questions/<%= q.id %>/delete"
          data-del-form
          data-title="<%- (q.title || '').replace(/\"/g,'&quot;') %>">
      <button type="submit"
              class="inline-flex items-center gap-2 rounded-lg bg-red-600 text-white px-3 py-2 text-sm font-semibold hover:bg-red-700">
        <i class="ti ti-trash"></i> Ta bort
      </button>
    </form>
  </div>

    <!-- Frågekort -->
    <article class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
      <div class="flex flex-wrap items-center gap-3 mb-2">
        <%
          const statusCls =
            q.status === 'open'     ? 'bg-emerald-50 text-emerald-700 border border-emerald-200' :
            q.status === 'answered' ? 'bg-sky-50 text-sky-700 border border-sky-200' :
                                      'bg-slate-50 text-slate-700 border border-slate-200';
          const statusLabels = { open: 'Öppen', answered: 'Besvarad', closed: 'Stängd' };
        %>
        <span class="text-sm rounded-full px-2 py-1 <%= statusCls %>">
          Status: <%= statusLabels[q.status] || q.status %>
        </span>
        <span class="text-sm text-slate-500">
          Skapad: <%= new Date(q.created_at).toLocaleString('sv-SE') %>
        </span>
        <% if (q.updated_at) { %>
          <span class="text-sm text-slate-500">
            Uppdaterad: <%= new Date(q.updated_at).toLocaleString('sv-SE') %>
          </span>
        <% } %>
      </div>

      <h2 class="text-xl font-semibold text-slate-900"><%= q.title %></h2>

      <% if (q.body) { %>
        <p class="mt-3 text-slate-700 whitespace-pre-line"><%= q.body %></p>
      <% } %>

<% 
  const fromName  = q.author_name || q.user_name || 'Anonym';
  const fromEmail = q.author_email || q.user_email || '';
%>
<div class="mt-4 text-sm text-slate-600">
  Från:
  <span class="font-medium"><%= fromName %></span>
  <% if (fromEmail) { %>&lt;<%= fromEmail %>&gt;<% } %>
</div>
      <!-- Maskin -->
<% if ((locals.machines || []).length) { %>
  <div class="mt-3">
    <div class="flex flex-wrap items-center gap-2">
      <span class="text-xs font-medium text-slate-500">Maskin:</span>
      <div class="flex flex-wrap gap-2">
        <% (locals.machines || []).forEach(function(m){ %>
          <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-3 py-1 text-xs font-semibold text-slate-700"><%= m %></span>
        <% }) %>
      </div>
    </div>
  </div>
<% } %>
    </article>

    <!-- Svara på frågan -->
    <article class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
      <div class="flex items-center justify-between mb-3">
        <h3 class="font-semibold text-slate-900">Svara på frågan</h3>
        <% if (q.answered_at) { %>
          <span class="text-xs text-slate-500">Senast besvarad: <%= new Date(q.answered_at).toLocaleString('sv-SE') %></span>
        <% } %>
      </div>
      <form method="POST" action="/admin/questions/<%= q.id %>">
<div>
  <textarea id="answerEditor" name="answer_body" rows="10"><%= q.answer_body || '' %></textarea>
  <p class="text-xs text-slate-500 mt-1">
    HTML tillåts och saneras server-side (t.ex. <code>&lt;p&gt;</code>, listor, länkar).
  </p>
</div>

        <div>
          <label class="block text-sm font-medium text-slate-700">Taggar (valfritt, komma-separerade)</label>
          <input
            name="answer_tags"
            value="<%= q.answer_tags || '' %>"
            placeholder="ex: b48, 330e, ecu"
            class="mt-1 w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm
                   focus:border-sky-500 focus:ring-sky-500 sm:text-sm" />
        </div>
        <div class="pt-2 flex items-center gap-3">
          <button type="submit"
                  class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-5 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
            <i class="ti ti-device-floppy"></i> Skicka svar
          </button>

<% if (q.is_answered) { %>
  <% 
    const role = (q.answered_role || '').toLowerCase();
    const roleLabel = role ? role.charAt(0).toUpperCase() + role.slice(1) : 'Okänd';
    const cls = role === 'admin'
      ? 'bg-red-100 text-red-700 border border-red-200'
      : role === 'support'
        ? 'bg-violet-100 text-violet-700 border border-violet-200'
        : 'bg-slate-100 text-slate-700 border border-slate-200';
  %>
  <span class="text-sm text-slate-500">Besvarad av</span>
  <span class="ml-1 text-[11px] px-2 py-0.5 rounded-full align-middle <%= cls %>"><%= roleLabel %></span>
<% } %>
        </div>
      </form>
    </article>
  </div>

  <!-- Högerkolumn -->
  <aside class="space-y-6">
<!-- Ändra status -->
<div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
  <h3 class="font-semibold text-slate-900 mb-3">Ändra status</h3>

  <form method="POST" action="/admin/questions/<%= q.id %>/status" class="space-y-3">
    <div class="relative">
      <select name="status"
              class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm sm:text-sm
                     focus:border-sky-500 focus:ring-sky-500 appearance-none">
        <option value="open"     <%= q.status === 'open'     ? 'selected' : '' %>>Öppen</option>
        <option value="answered" <%= q.status === 'answered' ? 'selected' : '' %>>Besvarad</option>
        <option value="closed"   <%= q.status === 'closed'   ? 'selected' : '' %>>Stängd</option>
      </select>
      <i class="ti ti-chevron-down absolute right-3 top-1/2 -translate-y-1/2 text-slate-500 pointer-events-none"></i>
    </div>

    <!-- Dölj fråga -->
    <label class="flex items-center gap-2 text-sm text-slate-700">
      <input type="checkbox" name="hide" <%= Number(q.hidden) === 1 ? 'checked' : '' %>
             class="rounded border-slate-300 text-sky-600 focus:ring-sky-500">
      Dölj fråga
    </label>

    <button type="submit"
            class="w-full inline-flex items-center justify-center gap-2 rounded-lg bg-sky-600 px-4 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
      <i class="ti ti-device-floppy"></i> Spara status
    </button>
  </form>
</div>

<!-- Koppling (ämne/resurs eller fråga) -->
<div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
  <h3 class="font-semibold text-slate-900 mb-3">Koppling</h3>

  <!-- Sök/koppla (stöder ämne/resurs/fråga) -->
  <div class="relative mb-4">
    <input id="topicSearch" type="search" placeholder="Sök ämne / resurs / fråga…"
           class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm focus:border-sky-500 focus:ring-sky-500"/>
    <div id="suggestBox"
         class="absolute z-10 mt-2 w-full bg-white border border-slate-200 rounded-xl shadow-lg hidden overflow-hidden"></div>
  </div>

  <div class="text-sm text-slate-600 mb-2">Nuvarande koppling:</div>

<% if (linked && linked.length) { 
     const t = linked[0]; 
     const isRes = Number(t.is_resource) === 1;
     const href  = isRes ? ('/resources/' + t.id) : ('/topic/' + t.id);
%>
  <!-- Kopplat ämne/resurs -->
  <div class="flex items-center justify-between gap-3 rounded-lg border border-slate-200 px-3 py-2">
    <a href="<%= href %>" class="text-sky-600 hover:underline truncate"><%= t.title %></a>
    <div class="flex items-center gap-2 shrink-0">
      <span class="text-xs text-slate-500"><%= isRes ? 'Resurs' : 'Ämne' %></span>
      <button type="button" id="btnDetach"
              class="text-xs px-2 py-1 rounded border border-slate-300 hover:bg-slate-50">
        Ta bort
      </button>
    </div>
  </div>

<% } else if (linkedQuestion) { %>
  <!-- Kopplad fråga -->
  <div class="flex items-center justify-between gap-3 rounded-lg border border-slate-200 px-3 py-2">
    <a href="/questions/<%= linkedQuestion.id %>" class="text-sky-600 hover:underline truncate">
      <%= linkedQuestion.title %>
    </a>
    <div class="flex items-center gap-2 shrink-0">
      <span class="text-xs text-slate-500">Fråga</span>
      <button type="button" id="btnDetach"
              class="text-xs px-2 py-1 rounded border border-slate-300 hover:bg-slate-50">
        Ta bort
      </button>
    </div>
  </div>

<% } else { %>
  <!-- Ingen koppling -->
  <div class="rounded-lg border border-dashed border-slate-300 px-3 py-2 text-sm text-slate-500">
    Ingen koppling ännu.
  </div>
<% } %>
</div>

    <!-- Kategorier för frågan -->
<div class="bg-white rounded-2xl border border-slate-200 p-6 shadow-sm">
  <h3 class="font-semibold text-slate-900 mb-3">Kategori</h3>

  <% if (!categories || categories.length === 0) { %>
    <p class="text-sm text-slate-500">Inga kategorier skapade ännu.</p>
  <% } else { 
       const selectedCatId = Array.isArray(qCategoryIds) && qCategoryIds.length ? String(qCategoryIds[0]) : '';
  %>
    <form id="catForm" class="space-y-3">
      <div class="relative">
        <select id="catSelect" name="category_id"
                class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm sm:text-sm
                       focus:border-sky-500 focus:ring-sky-500 appearance-none">
          <option value="">— Välj kategori —</option>
          <% categories.forEach(function(c){ %>
            <option value="<%= c.id %>" <%= String(c.id)===selectedCatId ? 'selected' : '' %>><%= c.title %></option>
          <% }) %>
        </select>
        <i class="ti ti-chevron-down absolute right-3 top-1/2 -translate-y-1/2 text-slate-500 pointer-events-none"></i>
      </div>

      <button type="button" id="btnSaveCat"
              class="w-full inline-flex items-center justify-center gap-2 rounded-lg bg-sky-600 px-4 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
        <i class="ti ti-device-floppy"></i> Spara kategori
      </button>
    </form>
  <% } %>
</div>

<!-- Intern kommentar (endast för personal) -->
<div class="bg-white rounded-2xl border border-slate-300 p-6 shadow-sm">
  <h3 class="font-semibold text-slate-900 mb-3">Intern kommentar</h3>

  <form method="POST" action="/admin/questions/<%= q.id %>/comment" class="space-y-3">
    <textarea name="internal_comment" rows="5"
              class="w-full rounded-lg border border-slate-300 px-3 py-2 shadow-sm
                     focus:border-sky-500 focus:ring-sky-500 sm:text-sm"><%= q.internal_comment || '' %></textarea>

    <button type="submit"
            class="w-full inline-flex items-center justify-center gap-2 rounded-lg bg-sky-600 px-4 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
      <i class="ti ti-device-floppy"></i> Spara kommentar
    </button>
  </form>
  <% if (q.internal_comment) { %>
    <p class="mt-2 text-xs text-slate-500">Senast sparad: <%= new Date(q.updated_at).toLocaleString('sv-SE') %></p>
  <% } %>
</div>
  </aside>
</section>

<!-- Snackbar för små notifieringar -->
<div id="snack"
     class="fixed bottom-4 left-1/2 -translate-x-1/2 hidden rounded-lg border px-4 py-2 text-sm shadow"></div>

<script>
(function(){
  var root  = document.getElementById('qView');
  var qid   = Number(root && root.dataset.qid);
  var snack = document.getElementById('snack');
  var input = document.getElementById('topicSearch');
  var box   = document.getElementById('suggestBox');
  var timer = null;

  function toast(text, ok) {
    snack.textContent = text;
    snack.className =
      'fixed bottom-4 left-1/2 -translate-x-1/2 rounded-lg px-4 py-2 text-sm shadow ' +
      (ok !== false
        ? 'bg-emerald-50 text-emerald-800 border border-emerald-200'
        : 'bg-red-50 text-red-800 border border-red-200');
    snack.classList.remove('hidden');
    setTimeout(function(){ snack.classList.add('hidden'); }, 2000);
  }

  // Byt status
  document.querySelectorAll('[data-status]').forEach(function(btn){
    btn.addEventListener('click', function(){
      var status = btn.getAttribute('data-status');
      fetch('/api/questions/' + qid + '/status', {
        method: 'PUT',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify({ status: status })
      })
      .then(function(res){ return res.json().then(function(d){ return { ok: res.ok, data: d }; }); })
      .then(function(resp){
        if (!resp.ok) throw new Error(resp.data && resp.data.error || 'Fel');
        toast('Status uppdaterad');
        location.reload();
      })
      .catch(function(){ toast('Kunde inte uppdatera status', false); });
    });
  });

  function escapeHtml(s){
    return (s || '').replace(/[&<>"']/g, function(m){
      return ({'&':'&amp;','<':'&lt;','>':'&gt;','"':'&quot;'}[m]);
    });
  }

function renderSuggest(rows){
  if (!rows || !rows.length){ box.classList.add('hidden'); box.innerHTML=''; return; }

  var html = rows.map(function(r){
    var t    = escapeHtml(r.title || '');
    var sn   = r.snippet ? '<div class="text-sm text-slate-600">' + escapeHtml(r.snippet) + '</div>' : '';
    var kind = (r.kind || r.type || 'topic').toLowerCase(); // viktigt

    var badgeTxt, badgeCls;
    if (kind === 'question') {
      badgeTxt = 'Fråga';
      badgeCls = 'bg-violet-100 text-violet-700 border border-violet-200';
    } else if (kind === 'resource') {
      badgeTxt = 'Resurs';
      badgeCls = 'bg-amber-100 text-amber-700 border border-amber-200';
    } else {
      badgeTxt = 'Ämne';
      badgeCls = 'bg-sky-100 text-sky-700 border border-sky-200';
    }

    return (
      '<button type="button" data-id="' + r.id + '" data-kind="' + kind + '" class="w-full text-left px-4 py-3 hover:bg-slate-50">' +
        '<div class="flex items-center gap-2">' +
          '<span class="text-[10px] px-1.5 py-0.5 rounded ' + badgeCls + '">' + badgeTxt + '</span>' +
          '<div class="font-medium text-slate-900">' + t + '</div>' +
        '</div>' +
        sn +
      '</button>'
    );
  }).join('');

  box.innerHTML = html;
  box.classList.remove('hidden');
}

  function fetchSuggest(q){
    if (!q) { renderSuggest([]); return; }
    fetch('/api/suggest?q=' + encodeURIComponent(q))
      .then(function(res){ return res.json(); })
      .then(function(rows){ renderSuggest(Array.isArray(rows) ? rows : []); })
      .catch(function(){ /* ignore */ });
  }

  if (input){
    input.addEventListener('input', function(){
      clearTimeout(timer);
      var q = input.value.trim();
      timer = setTimeout(function(){ fetchSuggest(q); }, 150);
    });
    document.addEventListener('click', function(e){
      if (!e.target.closest('#suggestBox') && e.target !== input) box.classList.add('hidden');
    });
  }

  if (box){
    box.addEventListener('click', function(e){
      var btn = e.target.closest('button[data-id]');
      if (!btn) return;

      var targetId   = btn.getAttribute('data-id');
      var targetType = btn.getAttribute('data-kind') || 'topic'; // 'topic' | 'resource' | 'question'

      fetch('/api/questions/' + qid + '/attach', {
        method: 'PUT',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ id: targetId, type: targetType, replace: true })
      })
      .then(res => res.json().then(d => ({ ok: res.ok, data: d })))
      .then(resp => {
        if (!resp.ok) throw new Error(resp.data && resp.data.error || 'Fel');
        toast('Koppling lyckades');
        location.reload();
      })
      .catch(e => toast(e.message || 'Kunde inte koppla', false));
    });
  }

  // Confirm delete
  var delForm = document.querySelector('[data-del-form]');
  if (delForm){
    delForm.addEventListener('submit', function(e){
      var t = delForm.dataset.title || '';
      if (!confirm('Ta bort frågan "' + t + '"? Detta går inte att ångra.')) e.preventDefault();
    });
  }

  // Spara EN kategori
  var saveBtn  = document.getElementById('btnSaveCat');
  var selectEl = document.getElementById('catSelect');

  if (saveBtn && selectEl) {
    saveBtn.addEventListener('click', function(){
      var val = selectEl.value ? [ String(selectEl.value) ] : [];
      fetch('/api/questions/' + qid + '/categories', {
        method: 'PUT',
        headers: { 'Content-Type':'application/json' },
        body: JSON.stringify({ category_ids: val })
      })
      .then(function(res){ return res.json().then(function(d){ return { ok: res.ok, data: d }; }); })
      .then(function(resp){
        if (!resp.ok) throw new Error(resp.data && resp.data.error || 'Fel');
        toast('Kategori sparad');
      })
      .catch(function(){ toast('Kunde inte spara kategori', false); });
    });
  }
})();
</script>
