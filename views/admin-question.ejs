<script>
  (function(){
    var root = document.getElementById('qView');
    var qid  = Number(root && root.dataset.qid);

    var btn = document.getElementById('btnDetach');
    if (btn) {
      btn.addEventListener('click', async function(){
        if (!confirm('Ta bort koppling?')) return;
        try {
          const res = await fetch('/api/questions/' + qid + '/attach', { method:'DELETE' });
          const data = await res.json();
          if (!res.ok) throw new Error(data && data.error || 'Fel vid borttagning');
          location.reload();
        } catch (e) {
          alert(e.message || 'Kunde inte ta bort koppling');
        }
      });
    }
  })();
</script>