<link rel="stylesheet" href="/css/style.css">


<section class="mx-auto max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-10">
  <!-- Vänsterkolumn -->
  <div class="lg:col-span-2 space-y-8">

<!-- Sidhuvud: Tillbaka + Admin-knappar -->
<div class="flex items-center justify-between">
  <button type="button"
          class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-300 hover:bg-slate-50"
          onclick="if (history.length>1) history.back(); else location.href='/'">
    <i class="ti ti-arrow-left"></i> Tillbaka
  </button>

  <% if (user && user.role === 'admin') { %>
    <% const isFeatured = Number(topic.is_featured) === 1; %>
    <div class="flex items-center gap-2">
      <a href="/admin/edit-topic/<%= encodeURIComponent(topic.id) %>"
         class="inline-flex items-center gap-2 rounded-lg bg-sky-600 text-white px-3 py-2 text-sm font-semibold hover:bg-sky-700">
        <i class="ti ti-edit"></i> Redigera
      </a>

      <form method="POST"
            action="/admin/topics/<%= encodeURIComponent(topic.id) %>/delete"
            data-del-form
            data-title="<%- (topic.title || '').replace(/\"/g,'&quot;') %>">
        <% if (typeof csrfToken !== 'undefined') { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% } %>
        <button type="submit"
                class="inline-flex items-center gap-2 rounded-lg bg-red-600 text-white px-3 py-2 text-sm font-semibold hover:bg-red-700">
          <i class="ti ti-trash"></i> Ta bort
        </button>
      </form>

      <!-- Stjärnknapp -->
      <form method="POST"
            action="/admin/topics/<%= encodeURIComponent(topic.id) %>/<%= isFeatured ? 'unfeature' : 'feature' %>">
        <% if (typeof csrfToken !== 'undefined') { %>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <% } %>
        <button type="submit"
                class="inline-flex items-center gap-2 rounded-lg <%= isFeatured ? 'bg-amber-500 hover:bg-amber-600' : 'bg-slate-700 hover:bg-slate-800' %> text-white px-3 py-2 text-sm font-semibold"
                title="<%= isFeatured ? 'Avstjärnmärk detta ämne' : 'Stjärnmärk detta ämne' %>">
          <i class="ti <%= isFeatured ? 'ti-star-filled' : 'ti-star' %>"></i>
          <%= isFeatured ? 'Avstjärnmärk' : 'Stjärnmärk' %>
        </button>
      </form>
    </div>
  <% } %>
</div>

<!-- Stjärnmärkta ämnen (lägg denna utanför admin-blocket) -->
<% if (featuredTopics && featuredTopics.length) { %>
  <section class="mb-10">
    <div class="flex items-center justify-between mb-4">
      <h2 class="text-xl font-semibold text-slate-900 flex items-center gap-2">
        <i class="ti ti-star text-amber-500"></i> Stjärnmärkta ämnen
      </h2>
      <a href="/explore?tab=topics&starred=1" class="text-sky-600 hover:underline">Visa alla</a>
    </div>

    <ul class="grid sm:grid-cols-2 lg:grid-cols-3 gap-4">
      <% featuredTopics.forEach(function(t){ %>
        <li class="rounded-xl border border-slate-200 bg-white p-4 hover:shadow-sm">
          <a href="/topic/<%= encodeURIComponent(t.id) %>" class="text-slate-800 font-medium hover:text-sky-700">
            <span class="inline-flex items-center gap-2">
              <i class="ti ti-star text-amber-500"></i>
              <span class="truncate"><%= t.title %></span>
            </span>
          </a>
          <% if (t.excerpt) { %>
            <p class="mt-1 text-sm text-slate-500 line-clamp-2"><%= t.excerpt %></p>
          <% } %>
        </li>
      <% }) %>
    </ul>
  </section>
<% } else { %>
  <div class="text-xs text-slate-500">featuredTopics.length = <%= (featuredTopics && featuredTopics.length) || 0 %></div>
<% } %>

    <!-- FRÅGA (eget kort, visas bara om detta är ett svar på en fråga) -->
    <% if (sourceQuestion) { %>
      <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
        <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Fråga</div>

        <h1 class="text-2xl font-bold text-slate-900 mb-2">
          Fråga: <%= sourceQuestion.title %>
        </h1>

        <% if (sourceQuestion.body) { %>
          <p class="text-slate-700 whitespace-pre-line"><%= sourceQuestion.body %></p>
        <% } else { %>
          <p class="text-slate-500 italic">Ingen beskrivning bifogad.</p>
        <% } %>

        <div class="mt-4 text-sm text-slate-500">
          Från: <span class="font-medium"><%= sourceQuestion.user_name || 'Anonym' %></span>
          • Skapad: <%= new Date(sourceQuestion.created_at).toLocaleString('sv-SE') %>
        </div>
      </article>
    <% } %>

    <!-- SVAR / ÄMNE (eget kort under frågan) -->
    <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
<div class="mb-4">
  <% if (sourceQuestion) { %>
    <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Svar</div>
  <% } %>
  <h1 class="text-2xl font-bold text-slate-900"><%= topic.title %></h1>
<% if (topic.excerpt) { %>
  <p class="mt-2 text-sm text-slate-500 italic"><%= topic.excerpt %></p>
<% } %>
</div>

<div class="prose prose-slate dark:prose-invert max-w-none mb-6">
  <%- include('partials/richtext', { id: 'topic-' + topic.id, html: topic.body }) %>
</div>
      <div class="text-sm text-slate-500">
        <% if (sourceQuestion) { %>
          Svarat av:
        <% } else { %>
          Publicerad av:
        <% } %>
        <span class="font-medium"><%= topic.author_name || 'Okänd' %></span>
        • <%= new Date(topic.created_at || topic.updated_at || Date.now()).toLocaleString('sv-SE') %>
      </div>

    </article>
  </div>

<!-- Högerkolumn -->
<aside class="space-y-8">
  <!-- Information -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Information</h2>
    <dl class="space-y-2 text-sm">
      <div class="flex justify-between">
        <dt class="text-slate-600">Visningar</dt>
        <dd class="font-medium text-slate-900"><%= topic.views || 0 %></dd>
      </div>

      <div class="flex justify-between">
        <dt class="text-slate-600">Senast uppdaterad</dt>
        <dd class="font-medium text-slate-900">
          <%= new Date(topic.updated_at || topic.created_at).toLocaleDateString('sv-SE') %>
        </dd>
      </div>

      <div class="flex justify-between">
        <dt class="text-slate-600">Kategori</dt>
        <dd class="font-medium">
          <% if (topic.category_id && topic.category_title) { %>
            <a href="/explore?tab=all&cat=<%= encodeURIComponent(String(topic.category_id).toLowerCase()) %>"
               class="text-sky-600 hover:underline">
              <%= topic.category_title %>
            </a>
          <% } else { %>
            <span class="text-slate-400 italic">Ingen kategori</span>
          <% } %>
        </dd>
      </div>
      <!-- Taggar -->
<% if (topic.tags) { 
     const tags = topic.tags.split(',').map(t => t.trim()).filter(Boolean); 
     if (tags.length) { %>
  <div class="mt-4 flex items-start justify-between gap-3 text-sm">
    <dt class="text-slate-600">Taggar</dt>
    <dd class="flex flex-wrap gap-1 justify-end max-w-[70%]">
      <% tags.forEach(function(tag){ %>
        <span class="inline-flex items-center rounded-full border border-slate-200 bg-slate-50 px-2 py-0.5 text-[11px] font-medium text-slate-700">
          <%= tag %>
        </span>
      <% }) %>
    </dd>
  </div>
<% }} %>
    </dl>
  </div>

<!-- Relaterat (ämnen + resurser + frågor) -->
<div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
<h2 class="text-lg font-semibold text-slate-900 mb-4">Relaterat</h2>
<% if (relatedMixed && relatedMixed.length) { %>
  <ul class="space-y-3">
    <% relatedMixed.forEach(function(it){ 
         const isRes = (it.kind !== 'question') && Number(it.is_resource) === 1;
         const href  = it.kind === 'question'
           ? (`/questions/${it.id}`)
           : (isRes ? (`/resources/${it.id}`) : (`/topic/${it.id}`));

         let badgeHtml;
         if (it.kind === 'question') {
           badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-violet-100 text-violet-700 border border-violet-200">Fråga</span>';
         } else if (isRes) {
           badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-amber-100 text-amber-700 border border-amber-200">Resurs</span>';
         } else {
           badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-sky-100 text-sky-700 border border-sky-200">Ämne</span>';
         }
    %>
      <li>
        <a href="<%= href %>" class="flex items-center gap-2 text-slate-700 hover:text-sky-700">
          <%- badgeHtml %>
          <span class="truncate"><%= it.title %></span>
        </a>
      </li>
    <% }) %>
  </ul>
<% } else { %>
  <p class="text-sm text-slate-500">Inget relaterat ännu.</p>
<% } %>
</div>

<%
  // --- Dedupe + filter (funkar både i topic.ejs och questions.ejs) ---
  const currentId =
    (typeof q !== 'undefined'      && q      && q.id)      ||
    (typeof topic !== 'undefined'  && topic  && topic.id)  ||
    (typeof t !== 'undefined'      && t      && t.id)      ||
    null;

  const _seen  = new Set();
  const _items = (relatedTopics || [])
    .filter(it => it && it.id)                                   // giltig rad
    .filter(it => !currentId || String(it.id) !== String(currentId)) // uteslut aktuell
    .filter(it => {
      const kind = (it.kind ? String(it.kind).toLowerCase() : 'topic');
      const key  = kind + ':' + String(it.id);
      if (_seen.has(key)) return false;
      _seen.add(key);
      return true;
    })
    .slice(0, 8); // valfritt tak
%>

<div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
  <h2 class="text-lg font-semibold text-slate-900 mb-4">Fler ämnen i denna kategori</h2>
  <% if (_items.length) { %>
    <ul class="space-y-3">
      <% _items.forEach(function(it){ 
           var kind  = String(it.kind || 'topic').toLowerCase();
           var isRes = (kind !== 'question') && Number(it.is_resource) === 1;

           var href  = (kind === 'question')
             ? ('/questions/' + it.id)
             : (isRes ? ('/resources/' + it.id) : ('/topic/' + it.id));

           if (it.url && typeof it.url === 'string' && it.url.startsWith('/')) href = it.url;

           var badgeHtml =
             (kind === 'question')
               ? '<span class="text-[10px] px-1.5 py-0.5 rounded bg-violet-100 text-violet-700 border border-violet-200">Fråga</span>'
               : (isRes
                   ? '<span class="text-[10px] px-1.5 py-0.5 rounded bg-amber-100 text-amber-700 border border-amber-200">Resurs</span>'
                   : '<span class="text-[10px] px-1.5 py-0.5 rounded bg-sky-100 text-sky-700 border border-sky-200">Ämne</span>');
      %>
        <li>
          <a href="<%= href %>" class="flex items-center gap-2 text-slate-700 hover:text-sky-700 min-w-0">
            <%- badgeHtml %>
            <span class="truncate max-w-[14rem]"><%= it.title %></span>
          </a>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p class="text-sm text-slate-500">Inga fler ämnen ännu.</p>
  <% } %>
</div>

</aside>
</section>

<script>
  (function(){
    const f = document.querySelector('[data-del-form]');
    if(!f) return;
    f.addEventListener('submit', function(e){
      const t = f.dataset.title || '';
      if(!confirm('Ta bort ämnet "' + t + '"? Detta går inte att ångra.')) e.preventDefault();
    });
  })();
</script>