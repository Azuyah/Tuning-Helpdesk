<section class="mx-auto max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-10">
  <!-- Vänsterkolumn -->
  <div class="lg:col-span-2 space-y-8">

    <!-- Sidhuvud: Tillbaka + Admin-knappar -->
    <div class="flex items-center justify-between">
      <button type="button"
              class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-300 hover:bg-slate-50"
              onclick="if (history.length>1) history.back(); else location.href='/'">
        <i class="ti ti-arrow-left"></i> Tillbaka
      </button>

      <% if (user && user.role === 'admin') { %>
        <div class="flex items-center gap-2">
          <a href="/admin/edit-topic/<%= encodeURIComponent(topic.id) %>"
             class="inline-flex items-center gap-2 rounded-lg bg-sky-600 text-white px-3 py-2 text-sm font-semibold hover:bg-sky-700">
            <i class="ti ti-edit"></i> Redigera
          </a>

          <form method="POST"
                action="/admin/topics/<%= encodeURIComponent(topic.id) %>/delete"
                data-del-form
                data-title="<%- (topic.title || '').replace(/\"/g,'&quot;') %>">
            <button type="submit"
                    class="inline-flex items-center gap-2 rounded-lg bg-red-600 text-white px-3 py-2 text-sm font-semibold hover:bg-red-700">
              <i class="ti ti-pencil"></i> Ta bort
            </button>
          </form>
        </div>
      <% } %>
    </div>

    <!-- FRÅGA (eget kort, visas bara om detta är ett svar på en fråga) -->
    <% if (sourceQuestion) { %>
      <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
        <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Fråga</div>

        <h1 class="text-2xl font-bold text-slate-900 mb-2">
          Fråga: <%= sourceQuestion.title %>
        </h1>

        <% if (sourceQuestion.body) { %>
          <p class="text-slate-700 whitespace-pre-line"><%= sourceQuestion.body %></p>
        <% } else { %>
          <p class="text-slate-500 italic">Ingen beskrivning bifogad.</p>
        <% } %>

        <div class="mt-4 text-sm text-slate-500">
          Från: <span class="font-medium"><%= sourceQuestion.user_name || 'Anonym' %></span>
          • Skapad: <%= new Date(sourceQuestion.created_at).toLocaleString('sv-SE') %>
        </div>
      </article>
    <% } %>

    <!-- SVAR / ÄMNE (eget kort under frågan) -->
    <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
      <div class="mb-4">
        <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Svar</div>
        <h2 class="text-2xl font-bold text-slate-900"><%= topic.title %></h2>
      </div>

      <div class="prose prose-slate max-w-none mb-6">
        <%- topic.body %>
      </div>

      <div class="text-sm text-slate-500">
        <% if (sourceQuestion) { %>
          Svarat av:
        <% } else { %>
          Publicerad av:
        <% } %>
        <span class="font-medium"><%= topic.author_name || 'Okänd' %></span>
        • <%= new Date(topic.created_at || topic.updated_at || Date.now()).toLocaleString('sv-SE') %>
      </div>

      <% if (topic.tags) { %>
        <div class="mt-8">
          <h3 class="text-sm font-semibold text-slate-500 uppercase">Taggar</h3>
          <div class="mt-2 flex flex-wrap gap-2">
            <% topic.tags.split(',').forEach(function(tag){ %>
              <span class="text-xs rounded-full bg-slate-100 text-slate-700 px-3 py-1"><%= tag.trim() %></span>
            <% }) %>
          </div>
        </div>
      <% } %>
    </article>
  </div>

  <!-- Högerkolumn -->
  <aside class="space-y-8">
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Relaterade frågor</h2>
      <% if (relatedQuestions && relatedQuestions.length) { %>
        <ul class="space-y-3">
          <% relatedQuestions.forEach(function(q){ %>
            <li><a href="/questions/<%= q.id %>" class="text-sky-600 hover:underline"><%= q.title %></a></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-sm text-slate-500">Inga frågor kopplade än.</p>
      <% } %>
    </div>

    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Fler ämnen i denna kategori</h2>
      <% if (relatedTopics && relatedTopics.length) { %>
        <ul class="space-y-3">
          <% relatedTopics.forEach(function(rt){ %>
            <li><a href="/topic/<%= rt.id %>" class="text-slate-700 hover:text-sky-700"><%= rt.title %></a></li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-sm text-slate-500">Inga fler ämnen ännu.</p>
      <% } %>
    </div>
  </aside>
</section>

<script>
  (function(){
    const f = document.querySelector('[data-del-form]');
    if(!f) return;
    f.addEventListener('submit', function(e){
      const t = f.dataset.title || '';
      if(!confirm('Ta bort ämnet "' + t + '"? Detta går inte att ångra.')) e.preventDefault();
    });
  })();
</script>