<section class="mx-auto max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-10">
  <!-- Vänsterspalt: själva topic -->
  <div class="lg:col-span-2">
    <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">

      <!-- RESURS-CALL OUT (överst) -->
<% if (topic.is_resource && topic.download_url) { %>
  <div class="mb-6 rounded-xl border border-slate-200 bg-white p-5 flex items-center justify-between">
    <div>
      <div class="text-sm uppercase text-slate-500">Resurs</div>
      <div class="font-semibold text-slate-900"><%= topic.title %></div>
    </div>
    <a href="<%= topic.download_url %>"
       class="rounded-lg bg-sky-600 text-white px-4 py-2 hover:bg-sky-700">
      Ladda ner
    </a>
  </div>
<% } %>

      <!-- Rubrik + admin-knapp -->
      <div class="flex items-start justify-between gap-4">
        <div class="min-w-0">
          <h1 class="text-3xl font-bold text-slate-900 break-words"><%= topic.title %></h1>
          <% if (topic.excerpt && !(topic.is_resource && topic.download_url)) { %>
            <p class="mt-2 text-slate-600"><%= topic.excerpt %></p>
          <% } %>
        </div>

        <% if (user && user.role === 'admin') { %>
          <a href="/admin/edit-topic/<%= topic.id %>"
             class="inline-flex items-center gap-2 rounded-xl bg-slate-900 text-white px-4 py-2 text-sm font-semibold hover:bg-slate-800">
            <i class="ti ti-edit"></i>
            Redigera
          </a>
        <% } %>
      </div>

      <!-- Brödtext -->
      <div class="prose prose-slate max-w-none mt-8">
        <%- topic.body %>
      </div>

      <!-- Taggar -->
      <% if (topic.tags) { %>
        <div class="mt-8">
          <h2 class="text-sm font-semibold text-slate-500 uppercase">Taggar</h2>
          <div class="mt-2 flex flex-wrap gap-2">
            <% topic.tags.split(',').map(t => t.trim()).filter(Boolean).forEach(tag => { %>
              <a href="/search?q=<%= encodeURIComponent(tag) %>"
                 class="text-xs rounded-full bg-slate-100 text-slate-700 px-3 py-1 hover:bg-slate-200">
                <%= tag %>
              </a>
            <% }) %>
          </div>
        </div>
      <% } %>
    </article>
  </div>

  <!-- Högerspalt -->
  <aside class="space-y-8">
    <!-- Relaterade frågor -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Relaterade frågor</h2>
      <% if (relatedQuestions && relatedQuestions.length) { %>
        <ul class="space-y-3">
          <% relatedQuestions.forEach(q => { %>
            <li>
              <a href="/questions/<%= q.id %>" class="text-sky-600 hover:underline">
                <%= q.title %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-sm text-slate-500">Inga frågor kopplade än.</p>
      <% } %>
    </div>

    <!-- Fler ämnen i kategorin -->
    <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
      <h2 class="text-lg font-semibold text-slate-900 mb-4">Fler ämnen i denna kategori</h2>
      <% if (relatedTopics && relatedTopics.length) { %>
        <ul class="space-y-3">
          <% relatedTopics.forEach(rt => { %>
            <li>
              <a href="/topic/<%= rt.id %>" class="text-slate-700 hover:text-sky-700">
                <%= rt.title %>
              </a>
            </li>
          <% }) %>
        </ul>
      <% } else { %>
        <p class="text-sm text-slate-500">Inga fler ämnen ännu.</p>
      <% } %>
    </div>
  </aside>
</section>