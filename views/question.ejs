<section class="mx-auto max-w-6xl px-4 py-10 grid lg:grid-cols-3 gap-10">
  <!-- Vänsterkolumn -->
  <div class="lg:col-span-2 space-y-8">

    <!-- Sidhuvud: Tillbaka + Admin-knappar -->
    <div class="flex items-center justify-between">
      <button type="button"
              class="inline-flex items-center gap-2 px-3 py-2 rounded-lg border border-slate-300 hover:bg-slate-50"
              onclick="if (history.length>1) history.back(); else location.href='/'">
        <i class="ti ti-arrow-left"></i> Tillbaka
      </button>

      <% if (user && user.role === 'admin') { %>
        <div class="flex items-center gap-2">
          <!-- Redigera/Ta bort fråga (alltid) -->
          <a href="/admin/questions/<%= q.id %>"
             class="inline-flex items-center gap-2 rounded-lg bg-sky-600 text-white px-3 py-2 text-sm font-semibold hover:bg-sky-700">
            <i class="ti ti-edit"></i> <%= q.is_answered ? 'Redigera svar' : 'Svara' %>
          </a>
          <form method="POST"
                action="/admin/questions/<%= q.id %>/delete"
                data-del-form
                data-title="<%- (q.title || '').replace(/\"/g,'&quot;') %>">
            <button type="submit"
                    class="inline-flex items-center gap-2 rounded-lg bg-red-600 text-white px-3 py-2 text-sm font-semibold hover:bg-red-700">
              <i class="ti ti-trash"></i> Ta bort
            </button>
          </form>
        </div>
      <% } %>
    </div>

    <!-- FRÅGA (eget kort) -->
    <article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
      <div class="text-xs uppercase tracking-wide text-slate-500 mb-2">Fråga</div>

      <h1 class="text-2xl font-bold text-slate-900 mb-2">
        Fråga: <%= q.title %>
      </h1>

      <% if (q.body) { %>
        <p class="text-slate-700 whitespace-pre-line"><%= q.body %></p>
      <% } else { %>
        <p class="text-slate-500 italic">Ingen beskrivning bifogad.</p>
      <% } %>

        <% if (q.image_url) { %>
    <div class="mt-4">
      <img src="<%= q.image_url %>"
           alt="Bilagd bild"
           class="max-h-96 rounded-xl border border-slate-200 object-contain bg-white" />
    </div>
  <% } %>

      <div class="mt-4 text-sm text-slate-500">
        Från: <span class="font-medium"><%= q.user_name || 'Anonym' %></span>
        • Skapad: <%= new Date(q.created_at).toLocaleString('sv-SE') %>
        <% if (q.updated_at && q.updated_at !== q.created_at) { %>
          • Uppdaterad: <%= new Date(q.updated_at).toLocaleString('sv-SE') %>
        <% } %>
      </div>
    </article>

<!-- SVAR (kort under frågan) -->
<article class="bg-white rounded-2xl border border-slate-200 shadow-sm p-8">
  <div class="mb-4">
    <div class="text-xs uppercase tracking-wide text-slate-500">Svar</div>
    <h2 class="text-2xl font-bold text-slate-900 mt-1">Svar</h2>
  </div>

  <% if (linked && linked.length) { 
       const t = linked[0]; %>
    <!-- Info-ruta: tidigare besvarat -->
    <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-5">
      <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
        <div class="flex items-start gap-3">
          <i class="ti ti-link text-lg mt-0.5 text-emerald-700"></i>
          <div>
            <div class="text-slate-800">
              Din fråga har besvarats tidigare i följande inlägg:
            </div>
            <a href="/topic/<%= t.id %>" class="mt-1 inline-flex items-center gap-2 font-medium text-emerald-700 hover:underline">
              <span class="truncate"><%= t.title %></span>
            </a>
          </div>
        </div>
        <div class="shrink-0">
          <a href="/topic/<%= t.id %>"
             class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-4 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
            <i class="ti ti-external-link"></i> Visa inlägg
          </a>
        </div>
      </div>
    </div>
    <% } else if (linkedQuestion) { %>
  <div class="rounded-xl border border-emerald-200 bg-emerald-50 p-5">
    <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="flex items-start gap-3">
        <i class="ti ti-link text-lg mt-0.5 text-emerald-700"></i>
        <div>
          <div class="text-slate-800">Din fråga har besvarats tidigare här:</div>
          <a href="/questions/<%= linkedQuestion.id %>" class="mt-1 inline-flex items-center gap-2 font-medium text-emerald-700 hover:underline">
            <span class="truncate"><%= linkedQuestion.title %></span>
          </a>
        </div>
      </div>
      <div class="shrink-0">
        <a href="/questions/<%= linkedQuestion.id %>" class="inline-flex items-center gap-2 rounded-lg bg-sky-600 px-4 py-2 text-white font-medium shadow-sm hover:bg-sky-700">
          <i class="ti ti-external-link"></i> Visa fråga
        </a>
      </div>
    </div>
  </div>


  <% } else if (q.is_answered && q.answer_body) { %>
    <!-- Internt skrivet svar -->
    <div class="prose prose-slate max-w-none mb-6">
      <%- include('partials/richtext', { id: 'answer-' + q.id, html: q.answer_body }) %>
    </div>
    <div class="text-sm text-slate-500">
      Svarat av: <span class="font-medium"><%= q.answered_by || 'Okänd' %></span>
      • <%= new Date(q.answered_at || q.updated_at || Date.now()).toLocaleString('sv-SE') %>
      <% if (q.answer_tags) { %> • Taggar: <%= q.answer_tags %><% } %>
    </div>
  <% } else { %>
    <!-- Ej besvarad -->
    <div class="rounded-xl border border-slate-200 bg-slate-50 p-5 text-slate-700">
      Frågan har ej blivit besvarad än.
    </div>
  <% } %>
</article>
  </div>

  <% function svStatus(s){
     return s === 'open' ? 'Öppen'
          : s === 'answered' ? 'Besvarad'
          : s === 'closed' ? 'Stängd'
          : (s || '-');
   }
   function statusTone(s){
     return s === 'answered' ? 'text-emerald-600'
          : s === 'open'     ? 'text-sky-600'
          : 'text-slate-500';
   }
%>
<!-- Högerkolumn -->
<aside class="lg:col-span-1 space-y-8 self-start">

<!-- Info-ruta -->
<div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
  <h2 class="text-lg font-semibold text-slate-900 mb-4">Information</h2>
  <dl class="space-y-2 text-sm">
    <div class="flex justify-between">
      <dt class="text-slate-600">Antal visningar</dt>
      <dd class="font-medium text-slate-900"><%= q.views || 0 %></dd>
    </div>

<!-- Koppling -->
<div class="flex items-center justify-between gap-3">
  <dt class="text-slate-600">Koppling</dt>
  <dd class="flex items-center gap-3 font-medium text-slate-900">
    <% if (linked && linked.length) { 
         const t = linked[0]; %>
      <a href="/topic/<%= t.id %>" class="text-sky-600 hover:underline truncate max-w-[14rem]">
        <%= t.title %>
      </a>
    <% } else if (linkedQuestion) { %>
      <a href="/questions/<%= linkedQuestion.id %>" class="text-sky-600 hover:underline truncate max-w-[14rem]">
        <%= linkedQuestion.title %>
      </a>
    <% } else { %>
      <span class="text-slate-400 italic">Ingen koppling</span>
    <% } %>
  </dd>
</div>

<div class="flex justify-between">
  <dt class="text-slate-600">Kategori</dt>
  <dd class="font-medium">
    <% if (q.category_id && q.category_title) { %>
      <a href="/explore?tab=all&cat=<%= encodeURIComponent(String(q.category_id).toLowerCase()) %>" 
         class="text-sky-600 hover:underline">
        <%= q.category_title %>
      </a>
    <% } else { %>
      <span class="text-slate-400 italic">Ingen kategori</span>
    <% } %>
  </dd>
</div>

    <div class="flex justify-between">
      <dt class="text-slate-600">Status</dt>
      <dd class="font-medium <%= statusTone(q.status) %>"><%= svStatus(q.status) %></dd>
    </div>
  </dl>
</div>

  <!-- Relaterade ämnen -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Relaterade ämnen</h2>
    <% if (relatedQuestions && relatedQuestions.length) { %>
      <ul class="space-y-3">
        <% relatedQuestions.forEach(function(it){ 
             const isRes  = (it.kind !== 'question') && Number(it.is_resource) === 1;
             const href   = it.kind === 'question'
                ? (`/questions/${it.id}`)
                : (isRes ? (`/resources/${it.id}`) : (`/topic/${it.id}`));

             let badgeHtml;
             if (it.kind === 'question') {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-violet-100 text-violet-700 border border-violet-200">Fråga</span>';
             } else if (isRes) {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-amber-100 text-amber-700 border border-amber-200">Resurs</span>';
             } else {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-sky-100 text-sky-700 border border-sky-200">Ämne</span>';
             }
        %>
          <li>
            <a href="<%= href %>" class="flex items-center gap-2 text-slate-700 hover:text-sky-700">
              <%- badgeHtml %>
              <span class="truncate"><%= it.title %></span>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-sm text-slate-500">Inga relaterade ämnen ännu.</p>
    <% } %>
  </div>

  <!-- Fler ämnen i denna kategori -->
  <div class="bg-white rounded-2xl border border-slate-200 shadow-sm p-6">
    <h2 class="text-lg font-semibold text-slate-900 mb-4">Fler ämnen i denna kategori</h2>
    <% if (relatedTopics && relatedTopics.length) { %>
      <ul class="space-y-3">
        <% relatedTopics.forEach(function(rt){ 
             const isRes  = (rt.kind !== 'question') && Number(rt.is_resource) === 1;
             const href   = rt.kind === 'question'
                ? (`/questions/${rt.id}`)
                : (isRes ? (`/resources/${rt.id}`) : (`/topic/${rt.id}`));

             let badgeHtml;
             if (rt.kind === 'question') {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-violet-100 text-violet-700 border border-violet-200">Fråga</span>';
             } else if (isRes) {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-amber-100 text-amber-700 border border-amber-200">Resurs</span>';
             } else {
               badgeHtml = '<span class="text-[10px] px-1.5 py-0.5 rounded bg-sky-100 text-sky-700 border border-sky-200">Ämne</span>';
             }
        %>
          <li>
            <a href="<%= href %>" class="flex items-center gap-2 text-slate-700 hover:text-sky-700">
              <%- badgeHtml %>
              <span class="truncate"><%= rt.title %></span>
            </a>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p class="text-sm text-slate-500">Inga fler ämnen ännu.</p>
    <% } %>
  </div>
</aside>

<script>
  (function(){
    const f = document.querySelector('[data-del-form]');
    if(!f) return;
    f.addEventListener('submit', function(e){
      const t = f.dataset.title || '';
      if(!confirm('Ta bort "' + t + '"? Detta går inte att ångra.')) e.preventDefault();
    });
  })();
</script>